<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.ohpizza.mapper.PageMapper">
	<select id="totalCount">
		select count(1)
		from tbl_board
	</select>
	<select id="selectListPaging"
		parameterType="co.ohpizza.common.PageDTO">
		select b.*
		from (select rownum rn, a.*
		from (select *
		from tbl_board
		order by board_no desc ) a ) b
		where b.rn > (#{page} - 1) * 5
    <![CDATA[
    and   b.rn <= (#{page} * 5)	    
    ]]>
	</select>
</mapper>